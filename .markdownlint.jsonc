{
  // Markdownlint configuration
  // https://github.com/DavidAnson/markdownlint

  // Allow line length to be flexible (many docs have long lines)
  "MD013": false,

  // Allow duplicate headings (common in technical docs)
  "MD024": false,

  // Allow heading increment skips (flexible doc structure)
  "MD001": false,

  // Allow ordered list prefix style 1/2/3
  "MD029": false,

  // Allow lists without surrounding blank lines (compact formatting)
  "MD032": false,

  // Allow headings without surrounding blank lines
  "MD022": false,

  // Allow inline HTML (sometimes needed for badges, etc.)
  "MD033": false,

  // Allow bare URLs (common in changelogs)
  "MD034": false,

  // Allow emphasis used as headings (common pattern)
  "MD036": false,

  // Don't require language on fenced code blocks
  "MD040": false,

  // Allow first line to not be a heading
  "MD041": false
}
